{
  "name": "@cas/billing",
  "version": "0.0.1",
  "type": "module",
  "main": "src/index.ts",
  "license": "ISC",
  "scripts": {
    "init": "pnpm nx pre-init",
    "pre-init": "echo app init",
    "build": "pnpm nx bundle",
    "generate-typescript-types": "cd types/contracts/generated/typescript && nx inner-generate-typescript-types",
    "generate-typescript-sdk": "cd sdk && nx inner-generate-typescript-sdk",
    "bundle": "concurrently \"pnpm:bundle-*\"",
    "bundle-report-usage": "OUTPUT_FILE=dist/report-usage.js ENTRY_POINT=jobs/report-usage/src/index.ts node --loader ts-node/esm esbuild.ts",
    "lint-staged": "eslint --max-warnings=0",
    "lint": "pnpm create-routes && eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix --no-error-on-unmatched-pattern",
    "test:unit": "vitest --config=vitest.config.unit.ts",
    "test:unit:coverage": "pnpm test:unit --coverage",
    "test:component": "vitest --config=vitest.config.component.ts",
    "test:integration": "vitest --config=vitest.config.integration.ts",
    "typecheck": "npm run create-routes && tsc --noEmit",
    "create-routes": "concurrently \"pnpm:create-routes-*\"",
    "debug-billing-api": "cd ../../dev-tools/typescript/casy && npm run run-casy -- run-mirrord -s billing-api",
    "bundle-billing-api": "cd services/billing-api/src && tsoa routes && cd ../../.. && OUTPUT_FILE=dist/billing-api.js ENTRY_POINT=services/billing-api/src/app.ts node --loader ts-node/esm esbuild.ts",
    "swagger-billing-api": "cd services/billing-api/src && tsoa spec && NODE_NO_WARNINGS=1 node --loader ts-node/esm --experimental-specifier-resolution=node ../../../dev-tools/typescript/app-sdk-generator/src/build-swagger.ts",
    "create-routes-billing-api": "cd services/billing-api/src && tsoa routes && cd ../../..",
    "start-billing-api": "NODE_NO_WARNINGS=1 export TS_NODE_LOG_ERROR=true && node --loader ts-node/esm --experimental-specifier-resolution=node --inspect services/billing-api/src/app.ts | npx pino-pretty --colorize",
    "create-workflow": "make -C workflows poetry-install helm-build"
  },
  "dependencies": {
    "@cas/billing-types": "workspace:*",
    "@cas/big-query": "workspace:*",
    "@cas/cortex-api": "workspace:*",
    "@cas/source-control-source-control-api-contract": "workspace:*",
    "@cas/api": "workspace:*",
    "@cas/cache": "workspace:*",
    "@cas/feature-flags": "workspace:*",
    "@cas/jobs": "workspace:*",
    "@cas/logger": "workspace:*",
    "@cas/proxy": "workspace:*",
    "@cas/service-client": "workspace:*",
    "@cas/source-control-types": "workspace:*",
    "@tsoa/runtime": "^6.3.0",
    "@cas/config-manager": "workspace:*",
    "axios": "^1.7.2"
  },
  "devDependencies": {
    "@cas/error-handling": "workspace:*",
    "@cas/test-kit-integration": "workspace:*",
    "@repo/esbuild-bundle": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/lint-staged-config": "workspace:*",
    "@types/node": "^20.14.2",
    "quicktype": "^23.0.170",
    "typescript": "~5.4.2",
    "vitest": "*",
    "nodemon": "^3.1.4"
  }
}
